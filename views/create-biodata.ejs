<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Biodata</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>

  <body>
    <div class="container w-50 mt-3">
      <nav class="navbar navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand">Add Biodata</a>
        </div>
      </nav>

      <form method="POST" action="/biodata" class="mt-4">
        <label for="id_user" class="form-label">User ID</label>
        <br />
        <input type="number" name="id_user" class="form-control" />
        <br />

        <label for="name" class="form-label">Name</label>
        <br />
        <input type="text" name="name" class="form-control" />
        <br />

        <label for="age" class="form-label">Age</label>
        <br />
        <input type="number" name="age" class="form-control" />
        <br />

        <label for="address" class="form-label">Address</label>
        <br />
        <input type="text" name="address" class="form-control" />
        <br />

        <button type="submit" class="btn-sm btn-primary mb-3">Submit</button>
      </form>
    </div>
  </body>
</html>
